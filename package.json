{
  "name": "flarekit",
  "version": "1.0.1",
  "private": true,
  "type": "module",
  "bin": {
    "flarekit": "./scripts/flarekit.mjs",
    "e2e": "./scripts/e2e-workflow.mjs"
  },
  "scripts": {
    "cleanup": "node ./scripts/cleanup.mjs",
    "setup": "node ./scripts/setup-wrangler.mjs",
    "dev": "node ./scripts/flarekit.mjs dev",
    "build": "node ./scripts/flarekit.mjs build",
    "preview": "node ./scripts/flarekit.mjs --ui=stream preview",
    "test": "node ./scripts/flarekit.mjs test",
    "test:coverage": "node ./scripts/flarekit.mjs test:coverage",
    "test:watch": "node ./scripts/flarekit.mjs test:watch",
    "test:e2e": "node ./scripts/e2e-workflow.mjs --wait-for=http://localhost:8000 --wait-for=http://localhost:7001 --timeout=120",
    "test:e2e:watch": "node ./scripts/e2e-workflow.mjs --wait-for=http://localhost:8000 --wait-for=http://localhost:7001 --timeout=120 --watch",
    "prepare": "pnpm exec husky || echo 'Husky not found, skipping...'",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@types/eslint-config-prettier": "^6.11.3",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "glob": "^11.0.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "tsc-alias": "^1.8.15",
    "turbo": "^2.5.1",
    "typescript": "^5.8.3",
    "wrangler": "^4.13.1"
  },
  "engines": {
    "node": ">=18.17.1"
  },
  "packageManager": "pnpm@8.15.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx,astro}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,json,md}": "prettier --write"
  },
  "dependencies": {
    "@types/node": "^22.15.2"
  }
}
